include mixins

doctype 5
html
    head
        title #{title} | mddApp
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
        link(rel='stylesheet', href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
        link(rel='stylesheet', href='/stylesheets/style.css')
    body

        +nav("Request Detail", "dropdown_menu", "/myrequests")

        +listGroup
            for d in data
                h4.detailTitle= d._Product.ProductName
                .detailPic 
                    img(src="images/img_autoprep.png" width="200px")
                h4.detailSerial SN: #{d.SerialNumber}
                +listItem
                    +listText('Status: ')= d.StatusDescription
                +listItem 
                    +listText('Room: ')= d.Room
                +listItem 
                    +listText('Install Date: ')= d.InstallDate
                +listItem 
                    +listText('Upcoming Preventitive Maintnence: ')= d.NextPMDate
                    +listText('Description: ')= d.NextPMDescription
        div.text-center
            button.btn.btn-primary(type='button') Submit Request

        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
