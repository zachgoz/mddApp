doctype 5
html
    head
        title #{title} | mddApp
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
        link(rel='stylesheet', href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        div(class='container')
            div(class='row')
                div(class='profile-header-container')
                    div(class='profile-header-img')
                        img(class="img-circle" src="http://api.randomuser.me/portraits/women/39.jpg")
                        div(class='rank-label-container')
                            span(class="label label-default rank-label") Doctor
            div(class='row')
                div(class='col-md-3 col-md-offset-3 text-center')
                    a(class="btn btn-sq-lg btn-primary")
                        br
                        i(class="fa fa-wrench fa-5x")
                        br
                        p Equipment
                div(class='col-md-3 text-center')
                    a(class="btn btn-sq-lg btn-primary")
                        br
                        i(class="fa fa-life-ring fa-5x")
                        br
                        p Service Requests

        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
