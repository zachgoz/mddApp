doctype 5
html
    head
        title #{title} | mddApp
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
        link(rel='stylesheet', href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        div(class='container')
            div(class='row')
                div(class='profile-header-container')
                    div(class='profile-header-img')
                        img(class="img-circle" src="http://api.randomuser.me/portraits/women/39.jpg")
                        div(class='rank-label-container')
                            span(class="label label-default rank-label") Doctor
            div(class='row')
                div(class='col-xs-12 col-md-6')
                    a(class='thumbnail')
                        img(img src="images/toolbox.png")
                        h3(class="text-center") Equipment
                div(class='col-xs-12 col-md-6')
                    a(class='thumbnail')
                        img(img src="images/tools.png")
                        h3(class="text-center") Support Requests

        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
