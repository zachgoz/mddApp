doctype 5
html
  head
    title #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 Sample Form
    form(name='form1'  action='' method='post')
      table(border='0')
        tr
          td Where do you work?
          td
            input(name='work', type='text', size='30', maxlength='30', required)
            font(color='blue') *
        tr
          td Position
          td
            input(name='position', type='text', size='30', maxlength='30', required)
            font(color='blue') *
        tr
          td
            input(type='submit', name='submit', value='Submit')